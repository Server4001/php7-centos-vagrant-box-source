# {{ ansible_managed }}
# Generated by Percona Configuration Wizard (http://tools.percona.com/) version REL5-20120208
[mysql]

# CLIENT #
port                            = {{ mysql_port }}
socket                          = {{ mysql_socket }}

[mysqld]

# GENERAL #
server-id                       = {{ mysql_server_id }}
user                            = mysql
default-storage-engine          = InnoDB
socket                          = {{ mysql_socket }}
pid-file                        = /var/lib/mysql/mysql.pid
explicit_defaults_for_timestamp = 1

# SAFETY #
max-allowed-packet              = 16M
max-connect-errors              = 1000000
skip-name-resolve
sql-mode                        = STRICT_TRANS_TABLES,NO_AUTO_CREATE_USER,NO_AUTO_VALUE_ON_ZERO,NO_ENGINE_SUBSTITUTION,ONLY_FULL_GROUP_BY
sysdate-is-now                  = 1
innodb-strict-mode              = 1
symbolic-links		            = 0

# CACHES AND LIMITS #
tmp-table-size                  = 32M
max-heap-table-size             = 32M
query-cache-type                = 0
query-cache-size                = 0
max-connections                 = 500
thread-cache-size               = 50
open-files-limit                = 65535
table-definition-cache          = 4096
table-open-cache                = 4096

# INNODB #
innodb-flush-method             = O_DIRECT
innodb-log-files-in-group       = 2
innodb-log-file-size            = 128M
innodb-flush-log-at-trx-commit  = 1
innodb-file-per-table           = 1
innodb-buffer-pool-size         = 1456M

# LOGGING #
log-error                      = {{ mysql_log_directory }}/mysql-error.log
log-queries-not-using-indexes  = 1
slow-query-log                 = 1
slow-query-log-file            = {{ mysql_log_directory }}/mysql-slow.log
